<%- include("./partials/header") %>

<nav class="navbar navbar-light bg-light">
    <a class="navbar-brand" href="#">Todo List</a>
  </nav>

<div class="container mt-5">
    <form action="/add/todo" method="POST" class="d-flex">
        <input type="text" name="todo" class="form-control" placeholder="What do you have planned for today">
        <input type="submit" value="Add todo" class="btn btn-md btn-primary mx-2"> 
    </form>
    <ul class="list-group my-5">
        <% todo.forEach(todos => { %>
          <li class="list-group-item"><%= todos.todo %><a href="/delete/todo/<%= todos._id %>" class="btn btn-danger btn-small mx-2">Delete</a></li>  
             
        <% })  %>
        
      </ul>
</div>

<%- include("./partials/footer") %>